{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "module": true,
      "React": true,
      "react": true,
      "JSX": true
    },
    "rules": { 
      "no-console": 1,
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": 1,
      "prettier/prettier": [
            "error", {
                "endOfLine": "crlf"
            }
        ]
    }
}